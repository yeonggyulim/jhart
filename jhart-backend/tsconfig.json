{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES5", "ES6"],
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "./",    
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "paths": { "*": ["node_modules/*"] }
  }
}
